@using EntityLayer.Concrete
@model List<Customer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>Index-musteri listeleme</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>No</th>
            <th>Musteri Adı</th>
            <th>Musteri şehri</th>            
            <th>Musteri Meslek</th>            
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.City</td>
                <td>@item.Job.Name</td>
                <td><a href="/Customer/DeleteCustomer/@item.Id" class="btn btn-danger">SİL</a></td>
                <td><a href="/Customer/UpdateCustomer/@item.Id" class="btn btn-info">GÜNCELLE</a></td>
            </tr>

        }
    </tbody>
</table>

<a href="~/Customer/AddCustomer/" class="btn btn-info">Yeni MUsteri Ekle</a>
