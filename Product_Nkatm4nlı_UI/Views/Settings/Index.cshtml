@model A_Product_Nkatm4nlı_UI.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>Index setting _Profil/Register/kayıt Düzenleme işlemleri</h1>

<form method="post">

    @Html.Label("Adınız")
    <input type="text" asp-for="Name" class="form-control" />
    <br /> 
    @Html.Label("Soaydınız")
    <input type="text" asp-for="SurName" class="form-control" />
    <br /> 
    @Html.Label("Mail adresiniz")
    <input type="email" asp-for="Mail" class="form-control" />
    <br /> 
    @Html.Label("Cinsiyet")
    <input type="text" asp-for="Gender" class="form-control" />
    <br /> 
    @Html.Label("Şifre")
    <input type="password" asp-for="Password" class="form-control" />
    <br /> 
    @Html.Label("Şifre tekrarı")
    <input type="password" asp-for="ConfirmPassword" class="form-control" />
    <br />
    <button>Değişiklikleri Kaydet</button>

</form>