@model EntityLayer.Concrete.Product
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>UpdateProdduct-Ürün Güncelleme</h1>

<form method="post">

    @Html.Label("Ürün ID")
    @Html.TextBoxFor(x=>x.Id ,new{@class="form-control"})
    @Html.ValidationMessageFor(x=>x.Id)
    <br />
    @Html.Label("Ürün Adi")
    @Html.TextBoxFor(x=>x.Name ,new{@class="form-control"})
    @Html.ValidationMessageFor(x=>x.Name)
    <br />

    @Html.Label("Ürün Fiyat")
    @Html.TextBoxFor(x=>x.Price,new{@class="form-control"})
    @Html.ValidationMessageFor(x=>x.Price)
    <br />

    @Html.Label("Ürün Stok")
    @Html.TextBoxFor(x=>x.Stock,new{@class="form-control"})
    @Html.ValidationMessageFor(x=>x.Stock)
    <br />
    <button class="btn btn-info">Ürün Güncelle</button>


</form>