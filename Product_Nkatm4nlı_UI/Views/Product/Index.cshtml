@using EntityLayer.Concrete
@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>Index Ürün listesi</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>No</th>
            <th>ürün Adı</th>
            <th>Ürün Fiyat</th>
            <th>Ürün Stok</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>                
                <td><a href="/Product/DeleteProduct/@item.Id" class="btn btn-danger">SİL</a></td>
                <td><a href="/Product/UpdateProduct/@item.Id" class="btn btn-info">GÜNCELLE</a></td>
            </tr>
            
        }
    </tbody>
</table>

<a href="~/Product/AddProduct/" class="btn btn-info">Yeni Ürün Ekle</a>
